function zigZagSum(n, numbers) {
    let numero = Number(n);
    let oddEven = 0;
    let sum = 0;
    for (i = 1; i <= n; i++) {
        oddEven = i % 2;
        if (oddEven == 0) {
            sum = sum + numbers[i - 1];
        } else {
            sum = sum - Math.abs(numbers[i - 1]);
        }
    }
    console.log(sum);
}
